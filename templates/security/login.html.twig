{% extends 'base.html.twig' %}

{% block title %}Connexion - {{ parent() }}{% endblock %}

{% block body %}

<div class="bg-white max-w-3xl mx-auto border my-4 py-10 px-20">

    <form method="post">

    <h1 class="text-center text-bold text-3xl mb-6">Inscription</h1>

        {% if error %}
            <div class="mb-6 text-red-600">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        {% if app.user %}
            <div class="mb-6 text-center">
                {{ app.user.userIdentifier }} <a class="bg-red-500 hover:bg-red-700 text-white font-bold py-1 px-2 rounded text-sm" href="{{ path('app_logout') }}">Logout</a>
            </div>
        {% endif %}
        
        <label for="inputEmail" class="block mb-1">Email</label>
        <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="w-full mb-6" autocomplete="email" required autofocus>
        
        <label for="inputPassword" class="block mb-1">Mot de passe</label>
        <input type="password" name="password" id="inputPassword" class="w-full mb-3" autocomplete="current-password" required>

        <input type="hidden" name="_csrf_token"
            value="{{ csrf_token('authenticate') }}"
        >

        
            {# Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
            See https://symfony.com/doc/current/security/remember_me.html #}

            <div class="mb-6">
                <label>
                    <input class="mr-2" type="checkbox" name="_remember_me"> Remember me
                </label>
            </div>
    

        <button class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-1 px-2 rounded text-lg block w-full" type="submit">
            Connexion
        </button>
    </form>
</div>

{% endblock %}
